<launch>
  <arg name="hw_interface" default="true"/>
  <!-- Start a node for each axis, copy this -->
  <node name="maxon" pkg="maxon_epos2" type="maxon_epos2" output="screen" unless="$(arg hw_interface)">
  	<rosparam command="load" file="$(find maxon_epos2)/config/default.yaml" />
  	<!-- <param name="SerialNumber" type="str" value="xxx" /> -->
  </node>

  <node name="blue_arm" pkg="manipulator" type="manipulator_node" output="screen">
    <param name="hw_interface" type="bool" value="$(arg hw_interface)"/>
  </node>

</launch>
